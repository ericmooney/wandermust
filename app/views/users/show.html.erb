<h1>Your Saved Destinations</h1>

<table class="table table-hover">
  <thead>
    <th>Destination</th>
    <th>Latitude</th>
    <th>Longitude</th>
    <th></th>
    <th></th>
  </thead>
  <tbody>
    <% @user.favorites.each do |favorite| %>
      <tr class="">
        <td><%= favorite.destination.address %></td>
        <td><%= favorite.destination.latitude %></td>
        <td><%= favorite.destination.longitude %></td>
        <td><%= link_to 'Show', favorite.destination %></td>
        <td><%= link_to 'Remove', favorite, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br />


<%= link_to 'Edit your Profile', edit_user_path(@user) %> |
<%= link_to 'Back to Home', destinations_path %>
