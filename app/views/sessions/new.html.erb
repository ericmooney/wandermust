<div id="sign_in">
  <h4>Sign up</h4>

  <%= render 'users/form', :local => {:@user => @user}  %>
</div>

<div id="log-in">
  <h4>Log In</h4>

  <%= form_tag sessions_path do %>
    <%= label_tag :email %>
    <%= text_field_tag :email, params[:email] %><br>

    <%= label_tag :password %>
    <%= password_field_tag :password %><br>

    <% if !@destination.nil? %>
      <input type="hidden" name="destination_id" value="<%= @destination.id %>">
    <% end %>

    <%= submit_tag %>
  <% end %>
</div>
