<h1>Listing TOP destinations</h1>

<table>
  <tr>
    <th>Number of Favorites</th>
    <th>Destination City</th>
    <th>Destination Country</th>
    <th>Latitude</th>
    <th>Longitude</th>
    <th></th>
    <th></th>
  </tr>

<% @top_destinations.take(5).each do |destination| %>
  <tr>
    <td><%= destination.users.size %></td>
    <td><%= destination.address.split(", ")[0] %></td>
    <td><%= destination.address.split(", ")[1,2].join(", ") %></td>
    <td><%= destination.latitude %></td>
    <td><%= destination.longitude %></td>
    <td><%= link_to 'Show', destination %></td>
  </tr>
<% end %>
</table>


