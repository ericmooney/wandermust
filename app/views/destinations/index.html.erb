<h1>Listing destinations</h1>

<table>
  <tr>
    <th>Destination</th>
    <th>Coords</th>
    <th></th>
    <th></th>
  </tr>

<% @destinations.each do |destination| %>
  <tr>
    <td><%= destination.address %></td>
    <td><%= destination.latitude %> and <%= destination.longitude %></td>
    <td><%= link_to 'Show', destination %></td>
  </tr>
<% end %>
</table>

